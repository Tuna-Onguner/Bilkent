# Compiler
CXX := g++
# Compiler flags
CXXFLAGS := -std=c++17 -O1 -Wall -Wextra# -O1 is for optimization for speed
SRCS := $(wildcard *.cpp)# Source files
OBJS := $(SRCS:.cpp=.o)# Object files
EXEC := hw1# Executable file

COMPILE: $(EXEC)# Default target

# For compiling the source files and linking them
$(EXEC): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $(EXEC) $(OBJS)

# For compiling the source files
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# For running the program
RUN: $(EXEC)
	./$(EXEC) $(ARGS)

# For cleaning the object files and the executable file
CLEAN:
	rm -f $(OBJS) $(EXEC)

# For cleaning all the files generated by the program, i.e. .txt and .dot files
# Hence, be careful with this command
CLEANALL: CLEAN
	rm -f *.txt *.dot
